<div class="mg-best-rooms">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="mg-sec-title">
          <h2>Our Rooms</h2>
          <p>Overview of our three room choices</p>
        </div>
        <div class="row">
          <% dato.rooms.each do |room| %>
            <%= partial :_room, locals: {
              image: room.name.downcase.gsub(' ', '_'),
              image_alt: "#{room.name.downcase} room",
              name: room.name,
              price: room.price,
              description: room.description,
              room_type: room.front_desk_anywhere_type,
              slug: room.name.downcase.gsub(' ', '_')
            } %>
          <% end %>
          <%#= partial :_room, locals: {
            image: :single_king,
            image_alt: 'single king room',
            name: 'Single King',
            price: 139,
            description: 'One king sized bed and private bathroom.',
            room_type: 1
          } %>
          <%#= partial :_room, locals: {
            image: :double_queen_suite,
            image_alt: 'double queen suite room',
            name: 'Double Queen Suite',
            price: 169,
            description: 'Two queen sized beds with kitchenette and private bathroom.',
            room_type: 2
          } %>
          <%#= partial :_room, locals: {
            image: :deluxe_king_suite,
            image_alt: 'deluxe king suite room',
            name: 'Deluxe King Suite',
            price: 189,
            description: 'One king sized bed, queen sofa sleeper, full kitchen, and private bathroom.',
            room_type: 3
          } %>
        </div>
      </div>
    </div>
  </div>
</div>
