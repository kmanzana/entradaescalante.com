---
active_tab: rooms
---

<% current_page.data.title = "Entrada Escalante | #{room.name}" %>

<% content_for :scripts do %>
  <%= javascript_include_tag 'javascripts/moment.min',
                             'javascripts/classie',
                             'javascripts/selectFx',
                             'javascripts/bootstrap-datepicker.min',
                             'javascripts/owl.carousel.min',
                             'javascripts/jssor.slider.mini',
                             'javascripts/starrr.min',
                             'javascripts/nivo-lightbox.min',
                             'javascripts/search-rooms' %>
<% end %>

<div class="mg-page-title parallax">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2><%= room.name %></h2>
        <p><%= room.short_description %></p>
      </div>
    </div>
  </div>
</div>
<div class="mg-single-room-price">
  <div class="mg-srp-inner">$<%= room.price %><sup>.00</sup><span>/Night</span></div>
</div>
<div class="mg-single-room">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <div class="mg-gallery-container">
          <ul class="mg-gallery" id="mg-gallery">
            <% room.photos.each do |photo| %>
              <li>
                <img class='hidden-xs' src="<%= photo.url w: 670, h: 350, fit: :crop %>" alt="<%= photo.alt %>">
                <img class='visible-xs' src="<%= photo.url w: 400, h: 350, fit: :crop %>" alt="<%= photo.alt %>">
              </li>
            <% end %>
          </ul>
          <ul class="mg-gallery-thumb" id="mg-gallery-thumb">
            <% room.photos.each do |photo| %>
              <li><img src="<%= photo.url  w: 100, h: 60, fit: :crop %>" alt="photo.alt"></li>
            <% end %>
          </ul>
        </div>
      </div>
      <% left_amenities, right_amenities = parse_and_split(room.amenities) %>
      <div class="col-md-5 mg-room-fecilities">
        <h2 class="mg-sec-left-title">Room Amenities</h2>
        <div class="row">
          <div class="col-sm-6">
            <ul>
              <% left_amenities.each do |amenity| %>
                <li><i class='<%= amenity[0] %>'></i> <%= amenity[1] %></li>
              <% end %>
            </ul>
          </div>
          <div class="col-sm-6">
            <ul>
              <% right_amenities.each do |amenity| %>
              <li><i class='<%= amenity[0] %>'></i> <%= amenity[1] %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="mg-single-room-txt">
          <h2 class="mg-sec-left-title">Room Description</h2>
          <%= markdown room.full_description %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 mg-saerch-room pb70">
        <div class="mg-book-now">
          <div class="row">
            <div class="col-md-3">
              <h2 class="mg-bn-title">Search Rooms <span class="mg-bn-big">For rates & availability</span></h2>
            </div>
            <div class="col-md-9">
              <div class="mg-bn-forms">
                <form>
                  <div class="row">
                    <div class="col-md-4 col-xs-6">
                      <div class="input-group date mg-check-in">
                        <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                        <input type="text" class="form-control js-check-in" id="exampleInputEmail1" placeholder="Check In">
                      </div>
                    </div>
                    <div class="col-md-4 col-xs-6">
                      <select class="cs-select cs-skin-elastic js-nights">
                        <option value="" disabled selected>Nights</option>
                        <% (1..14).each do |nights| %>
                          <option value="<%= nights %>"><%= nights %></option>
                        <% end %>
                      </select>
                    </div>
                    <input type='hidden' class='js-room-type' name='room_type' value='<%= room.front_desk_anywhere_type %>'>
                    <div class="col-md-4">
                      <button type="submit" class="btn btn-main btn-block js-search-rooms">Check Now</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
